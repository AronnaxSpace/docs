<%= turbo_frame_tag :project_content do %>
  <h1><%= article.title %></h1>
  <div class="mb-3"><%= article.content %></div>
  <% if project.owner == current_user %>
    <div class="d-flex">
      <%= link_to edit_project_category_article_path(project, category, article), class: "p-1 btn btn-link", data: { turbo_frame: :project_content } do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>
      <%= button_to project_category_article_path(project, category, article), method: :delete, class: "p-1 btn btn-link", data: { turbo_confirm: t("are_you_sure") } do %>
        <i class="bi bi-trash3"></i>
      <% end %>
    </div>
  <% end %>
<% end %>
