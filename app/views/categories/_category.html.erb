<li id="<%= dom_id category %>">
  <div class="d-flex justify-content-between align-items-center border-bottom <%= item_classes if local_assigns[:item_classes] %>">
    <span class="<%= title_classes if local_assigns[:title_classes] %>"><%= category.name %></span>
    <% if project.owner == current_user %>
      <div class="d-flex">
        <%= link_to edit_project_category_path(category.project, category), class: "p-1 btn btn-link", data: { turbo_frame: :project_content } do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= button_to project_category_path(category.project, category), method: :delete, class: "p-1 btn btn-link", data: { turbo_confirm: t("are_you_sure") } do %>
          <i class="bi bi-trash3"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</li>
